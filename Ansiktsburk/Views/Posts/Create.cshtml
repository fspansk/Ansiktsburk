@model  Ansiktsburk.ViewModels.PostFormViewModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm("Create", "Posts"))
{
    <div class="form-group">
        @Html.LabelFor(p => p.Body)
        @Html.TextAreaFor(p => p.Body, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Author)
        @Html.TextAreaFor(p => p.Author, new { @class = "form-control" })
    </div>
    <input type="submit" value="Lägg ut" class="btn btn-primary"/>
}