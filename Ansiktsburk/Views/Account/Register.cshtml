@model Ansiktsburk.ViewModels.RegisterFormViewModel

@using (Html.BeginForm("Register", "Account"))
{
    <div class="form-group">
        @Html.LabelFor(u => u.Username)
        @Html.TextBoxFor(u => u.Username, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(p => p.Password)
        @Html.TextBoxFor(p => p.Password, new { @class = "form-control", @type = "password" })
    </div>
    <div class="form-group">
        <label>Confirm Lösenord</label>
        @Html.TextBoxFor(p => p.ConfirmPassword, new { @class = "form-control", @type = "password" })
        @Html.ValidationMessageFor(p => p.ConfirmPassword)
    </div>
    <input type="submit" value="Confirm skicka" />
}